<project
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd"
	xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
	<modelVersion>4.0.0</modelVersion>
	<parent>
		<groupId>org.cohorte.runtime</groupId>
		<artifactId>cohorte-runtime</artifactId>
		<version>1.2.0-SNAPSHOT</version>	
	</parent>
	<artifactId>cohorte-runtime-bundles</artifactId>	
	<packaging>pom</packaging>

	<name>Cohorte Runtime :: OSGi bundles</name>

	<modules>		
		<module>../../../boot/org.cohorte.pyboot</module>
		<module>../../../boot/org.cohorte.pyboot.api</module>
		<module>../../../boot/org.cohorte.pyboot.config</module>
		<module>../../../boot/org.cohorte.pyboot.shell.agent</module>
		<module>../../../boot/org.psem2m.isolates.base</module>
		<module>../../../boot/org.psem2m.isolates.constants</module>
		<module>../../../boot/org.cohorte.slf4j-OCIL</module>

		<module>../../../composer/org.cohorte.composer.api</module>
		<module>../../../composer/org.cohorte.composer.isolate</module>

		<module>../../../isolates/org.cohorte.shell.osgi</module>
		<module>../../../isolates/org.cohorte.shell.remote</module>
		<module>../../../isolates/org.psem2m.isolates.loggers</module>
		<module>../../../isolates/org.psem2m.isolates.slave.agent</module>
		<module>../../../isolates/org.psem2m.status.storage</module>
		
		<module>../../../isolates/org.cohorte.isolates.discovery.local</module>
		<module>../../../cohorte-runtime-package</module>
	</modules>

	<properties>
		<pkg-version>0.0.2</pkg-version>
		<tycho-version>1.0.0</tycho-version>
		<osgi-version>5.0.0</osgi-version>
		<ipojo-version>1.12.1</ipojo-version>
		<cohorte-remote-version>1.2.1</cohorte-remote-version>
		<cohorte-jabsorb-version>1.1.0</cohorte-jabsorb-version>
		<project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
	</properties>

	<build>	
		<plugins>
			<!-- iPOJO -->
			<plugin>
				<groupId>org.apache.felix</groupId>
				<artifactId>maven-ipojo-plugin</artifactId>
			</plugin>					
			<!-- tycho : maven -->
			<plugin>
				<groupId>org.eclipse.tycho</groupId>
				<artifactId>tycho-maven-plugin</artifactId>				
			</plugin>
			<!-- tycho : target platform -->
			<plugin>
				<groupId>org.eclipse.tycho</groupId>
				<artifactId>target-platform-configuration</artifactId>
			</plugin>
					
			<!-- tycho : generate sources jars -->
			<plugin>
				<groupId>org.eclipse.tycho</groupId>
				<artifactId>tycho-source-plugin</artifactId>
			</plugin>
			<plugin>
			<!-- Tycho: Tolerate version differences -->
				<groupId>org.eclipse.tycho</groupId>
				<artifactId>tycho-packaging-plugin</artifactId>
				<configuration>
					<strictVersions>false</strictVersions>
				</configuration>
			</plugin>			
		</plugins>
		
		<pluginManagement>
			<!-- Generates sources jar -->
			<plugins>
				<!-- iPOJO manipulation -->
				<plugin>
					<groupId>org.apache.felix</groupId>
					<artifactId>maven-ipojo-plugin</artifactId>
					<version>${ipojo-version}</version>
					<configuration>
						<!-- Add support for Tycho packaging -->
						<m_supportedProjectTypes>
							<type>eclipse-plugin</type>
						</m_supportedProjectTypes>
					</configuration>
					<executions>
						<execution>
							<goals>
								<goal>ipojo-bundle</goal>
							</goals>
						</execution>
					</executions>
				</plugin>
				<!--  tycho : maven -->
				<plugin>
					<groupId>org.eclipse.tycho</groupId>
					<artifactId>tycho-maven-plugin</artifactId>
					<version>${tycho-version}</version>
					<extensions>true</extensions>
				</plugin>
				<!-- tycho : target platform -->
				<plugin>
					<groupId>org.eclipse.tycho</groupId>
					<artifactId>target-platform-configuration</artifactId>
					<version>${tycho-version}</version>
					<configuration>
						<!-- consider bundles compiled with maven and available on local maven repository.
							they will be added to the target platform used by tycho to compile each project.  
							@see http://wiki.eclipse.org/Tycho/Target_Platform -->
						<pomDependencies>consider</pomDependencies>
					</configuration>
				</plugin>
				<!-- Tycho : packaging -->
				<plugin>
					<groupId>org.eclipse.tycho</groupId>
					<artifactId>tycho-packaging-plugin</artifactId>
					<version>${tycho-version}</version>
				</plugin>
				<!-- tycho : generate sources jars -->
				<plugin>
					<groupId>org.eclipse.tycho</groupId>
					<artifactId>tycho-source-plugin</artifactId>
					<version>${tycho-version}</version>
					<executions>
						<execution>
							<id>plugin-source</id>
							<goals>
								<goal>plugin-source</goal>
							</goals>
						</execution>
					</executions>
				</plugin>
				
				<!-- Add iPOJO annotations to class path ?? -->
				<plugin>
					<groupId>org.eclipse.tycho</groupId>
					<artifactId>tycho-compiler-plugin</artifactId>
					<version>${tycho-version}</version>
					<configuration>
						<source>1.8</source>
						<target>1.8</target>
						<useProjectSettings>false</useProjectSettings>
						<extraClasspathElements>
							<!-- iPOJO Annotations are not in a bundle -->
							<extraClasspathElement>
								<groupId>org.apache.felix</groupId>
								<artifactId>org.apache.felix.ipojo.annotations</artifactId>
								<version>${ipojo-version}</version>
							</extraClasspathElement>
						</extraClasspathElements>
					</configuration>
				</plugin>				
			</plugins>
		</pluginManagement>
	</build>

	<repositories>
	<!-- 
		<repository>
        	<id>p2-repo</id>
        	<url>${p2-repo-location}</url>
        	<layout>p2</layout>
        </repository>  -->
		<repository>
        	<id>felix-p2</id>
        	<url>http://nrm.cohorte.tech/repository/felix-p2/5.4.0</url>
        	<layout>p2</layout>        
        </repository>	
		<repository>
			<id>cohorte.snapshots</id>
			<name>Cohorte Snapshot Repository</name>
			<url>http://nrm.cohorte.tech/repository/cohorte-snapshots</url>
			<releases>
				<enabled>false</enabled>
			</releases>
			<snapshots>
				<enabled>true</enabled>
			</snapshots>
		</repository>
		<repository>
			<id>cohorte.releases</id>
			<name>Cohorte Releases Repository</name>
			<url>http://nrm.cohorte.tech/repository/cohorte-releases</url>
			<releases>
				<enabled>true</enabled>
			</releases>
			<snapshots>
				<enabled>false</enabled>
			</snapshots>
		</repository>
	</repositories>	
</project>
